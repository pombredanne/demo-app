@import "normalize.css/normalize.css"
@import "nib"

*
    box-sizing(border-box)

body
    font-family "Helvetica Neue", Helvetica, Arial, sans-serif
    padding 3em
    font-size 13px
    line-height 18px
    color #333
ul
    padding 0
    list-style none

.flashes
    clear both
    text-shadow none
    > li
        padding 1em
        border-radius(4px)
    .error
        color #f00
        border 1px #f00 solid
        background #ffc6c6
    .success
        color #119e00
        border 1px #119e00 solid
        background #bcffbc

form
    width 531px
    padding 1em 3em
    border 1px #ccc solid
    border-radius(5px)
    line-height 2em
    background #e7eff5
    box-shadow(5px 5px 5px #888)
    .errors
        color #f00
        > li
            padding-left 150px
    fieldset
        padding 0
        border 0
    span
        display block
    label:first-child
        display block
        float left
        width 150px
        padding-right 1em
        text-align right
    input[type=text],
    input[type=password],
    input[type=email],
    select,
    textarea
        width 300px
        padding 0.5em
        border 1px #ddd solid
    p:last-child
        text-align right
    input[type=submit]
        display inline-block
        min-width 65px
        padding 0.5em 1em
        line-height 2em
        border 1px #ddd solid
        border-radius 3px
        background linear-gradient(top, #fff, #e0e0e0)
        &:hover
            box-shadow(2px, 2px, 6px, #333)
